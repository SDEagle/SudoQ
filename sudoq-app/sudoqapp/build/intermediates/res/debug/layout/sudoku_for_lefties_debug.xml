<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sudoku_frame_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:background="@drawable/background_serious" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- is is the former annoying white stripe. I dont' know why it is there, but ichanged it to gray to better blend in -->
    
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="2.5"
           android:orientation="horizontal"
           android:background="#282828" >

            <de.sudoq.view.VirtualKeyboardLayout
                android:id="@+id/virtual_keyboard"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
        android:layout_weight="1"
        android:gravity="left"
                
                android:orientation="vertical"
                android:padding="5dp" >
            </de.sudoq.view.VirtualKeyboardLayout>
           <!--Buttons-->

            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <de.sudoq.view.SquareImageButton
                    android:id="@+id/button_sudoku_help"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:padding="7dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/help" />
            </LinearLayout>
                       
      </LinearLayout>
    </LinearLayout>
    
    
</FrameLayout><!-- From: file:/home/timo/Code/android/Sudoq8_the_new/SudoQ/sudoq-app/sudoqapp/src/main/res/layout/sudoku_for_lefties_debug.xml -->